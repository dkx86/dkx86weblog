@model dkx86weblog.Models.Photo

@{
    ViewData["Title"] = "Photo Details";
}

<div>
    
    <div class="row">
        <img src="~/photos/@Model.GetPreviewFileName()" class="img-fluid m-auto" />
    </div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
