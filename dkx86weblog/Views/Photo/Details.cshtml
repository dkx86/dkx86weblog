@model dkx86weblog.Models.Photo

@{
    ViewData["Title"] = "Photo Details";
}

<div>

    <div class="row">
        <a href="#photo">
            <img src="~/photos/@Model.GetPreviewFileName()" class="img-fluid m-auto col-12" />
        </a>
    </div>

    <hr />

    <div class="row">
        <p class="col-12">@Html.DisplayFor(model => model.Title)</p>
        <p class="col-12">
            <a href="~/photos/@Model.FileName" class="btn btn-dark"> @Html.DisplayFor(model => model.Width) x @Html.DisplayFor(model => model.Height)</a>
        </p>
    </div>

    <dl class="row">


       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CameraName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CameraName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISO)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExposureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExposureTime)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aperture)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aperture)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FocalLength)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FocalLength)
        </dd>
    </dl>


    
</div>

<div class="JesterBox">
    <div id="photo" class="JesterBoxDiv">
        <img src="~/photos/@Model.GetPreviewFileName()" onClick="history.go(-1);" alt="@Model.Title" title="@Model.Title" />
    </div>
</div>