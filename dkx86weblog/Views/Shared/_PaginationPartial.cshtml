@model PageViewModel;

@if (Model == null || Model.TotalPages <= 1)
{
    return;
}


<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-center">
        @{
            var disabledPrev = Model.HasPreviousPage ? "" : "disabled";
        }
        <li class="page-item @disabledPrev">
            <a class="page-link" href="?page=@(Model.PageNumber - 1)" aria-label="Previous">&laquo;</a>
        </li>

        <li class="page-item disabled">
            <p class="page-link">@Model.PageNumber / @Model.TotalPages</p>
            
        </li>

        @{
            var disabledNext = Model.HasNextPage ? "" : "disabled";
        }
        <li class="page-item @disabledNext">
            <a class="page-link" href="?page=@(Model.PageNumber + 1)" aria-label="Next">&raquo;</a>
        </li>
    </ul>
</nav>
