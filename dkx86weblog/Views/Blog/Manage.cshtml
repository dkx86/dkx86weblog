@model dkx86weblog.Models.BlogViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>MANAGE BLOG</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

@await Html.PartialAsync("_PaginationPartial", @Model.PageModel)

<table class="table">
    <thead>
        <tr>
            <th>
                Create time
            </th>
            <th>
                Update time
            </th>
            <th>
                Title
            </th>

            <th>
                Published
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @if (!item.Published)
                    {
                        <a asp-action="Publish" asp-route-id="@item.ID">Publish</a>
                    }
                    else
                    {
                        <a asp-action="Unpublish" asp-route-id="@item.ID">Unpublish</a>
                    }


                    | <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Post" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", @Model.PageModel)
