@model dkx86weblog.Models.Post

@{
    ViewData["Title"] = @Model.Title;
}
<div class="row">
    <div class="text-muted col-12 text-right">
        <small>@Model.CreateTime</small>

        @if (!@Model.CreateTime.Equals(@Model.UpdateTime))
        {
            <small>(upd: @Model.UpdateTime)</small>
        }
    </div>
</div>

<div class="row">
    <h1 class="col-12 mb-2">@Model.Title</h1>
</div>

<div class="row">
    <hr />
    <div class="col-12 text-dark p-3 post_body">
        @Html.Raw(@Model.Body)
    </div>
</div>
