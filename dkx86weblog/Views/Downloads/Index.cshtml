@model dkx86weblog.Models.DigitalPackageViewModel

@{
    ViewData["Title"] = "Downloads";
}

@await Html.PartialAsync("_PaginationPartial", @Model.PageModel)



@foreach (var item in Model.Items)
{
    <div class="row ">
        <div class="col-sm-12 col-md-8 m-auto">
            <div class="card mb-4">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/downloads/@item.PreviewFileName" class="card-img ">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.ActionLink(item.Title, "Details", new { ID = item.ID }, new { @class = "text-dark glitch card-link" })
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted"><small>@item.UploadDate</small></h6>
                            <p class="card-text">@item.Description</p>
                            <a href="~/downloads/@item.PackageFileName" class="btn btn-dark">@item.FileType.ToString() ( @item.FileSizePretty() )</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@await Html.PartialAsync("_PaginationPartial", @Model.PageModel)
