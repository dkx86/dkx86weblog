@model dkx86weblog.Models.DigitalPackage

@{
    ViewData["Title"] = "Create digital package";
}

<h1>Create digital package</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PackageFileName" class="control-label"></label>
                <input type="file" name="packageFile" />
                <span asp-validation-for="PackageFileName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PreviewFileName" class="control-label"></label>
                <input type="file" name="previewFile" />
                <span asp-validation-for="PreviewFileName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="120" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="FileType" class="control-label"></label>
                @Html.DropDownList("FileType", Html.GetEnumSelectList<FileType>(), "Select file type", new { @class = "form-control" })
                <span asp-validation-for="FileType" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

